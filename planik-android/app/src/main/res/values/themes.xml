<resources>

  <style name="Theme.Planik" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorSurface">@color/white</item>
    <item name="colorOnSurface">@color/black</item>
    <item name="colorPrimary">@color/white</item>
    <item name="colorOnPrimary">@color/black</item>

    <item name="android:statusBarColor">@color/gray</item>
    <item name="android:navigationBarColor">@color/gray</item>
  </style>

  <style name="Theme.Planik.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.Planik.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.Planik.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>